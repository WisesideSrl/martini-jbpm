<?xml version="1.0" encoding="UTF-8"?>
<bpmn2:definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:bpmn2="http://www.omg.org/spec/BPMN/20100524/MODEL"
                   xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
                   xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
                   xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
                   xmlns:drools="http://www.jboss.org/drools"
                   xmlns:tns="http://www.jboss.org/drools"
                   id="_ProcessoPadre"
                   targetNamespace="http://www.jboss.org/drools">
  
  <bpmn2:itemDefinition id="_ordineIdItem" structureRef="String"/>
  <bpmn2:itemDefinition id="_lottoNumeroItem" structureRef="String"/>
  <bpmn2:itemDefinition id="_risultatoItem" structureRef="String"/>
  <bpmn2:itemDefinition id="_correlationKeysItem" structureRef="Object"/>
  <bpmn2:itemDefinition id="_payloadItem" structureRef="Object"/>
  
  <bpmn2:signal id="figlioCompletato" name="figlioCompletato"/>
  
  <bpmn2:process id="com.martinispec.processopadre" 
                 drools:packageName="com.martinispec.processes" 
                 drools:version="1.0" 
                 name="ProcessoPadre" 
                 isExecutable="true">
    
    <bpmn2:property id="ordineId" itemSubjectRef="_ordineIdItem" name="ordineId"/>
    <bpmn2:property id="lottoNumero" itemSubjectRef="_lottoNumeroItem" name="lottoNumero"/>
    <bpmn2:property id="risultato" itemSubjectRef="_risultatoItem" name="risultato"/>
    <bpmn2:property id="jmsCorrelationKeys" itemSubjectRef="_correlationKeysItem" name="jmsCorrelationKeys"/>
    <bpmn2:property id="jmsPayload" itemSubjectRef="_payloadItem" name="jmsPayload"/>
    
    <bpmn2:startEvent id="_startEvent" name="Start">
      <bpmn2:outgoing>_flow1</bpmn2:outgoing>
    </bpmn2:startEvent>
    
    <bpmn2:scriptTask id="_preparaDati" name="Prepara Dati" scriptFormat="http://www.java.com/java">
      <bpmn2:incoming>_flow1</bpmn2:incoming>
      <bpmn2:outgoing>_flow2</bpmn2:outgoing>
      <bpmn2:script><![CDATA[
System.out.println("[ProcessoPadre] ======================================");
System.out.println("[ProcessoPadre] Preparazione dati per processo figlio");
System.out.println("[ProcessoPadre] ordineId: " + ordineId);
System.out.println("[ProcessoPadre] lottoNumero: " + lottoNumero);
System.out.println("[ProcessoPadre] Process Instance ID: " + kcontext.getProcessInstance().getId());

// Crea Map variables per nuovo formato ProcessMessage
java.util.Map variables = new java.util.HashMap();
variables.put("ordineId", ordineId);
variables.put("lottoNumero", lottoNumero);
kcontext.setVariable("jmsPayload", variables);

System.out.println("[ProcessoPadre] Variables create per JMS (nuovo formato ProcessMessage)");
System.out.println("[ProcessoPadre] ======================================");
]]></bpmn2:script>
    </bpmn2:scriptTask>
    
    <!-- Service Task: Avvia Figlio via JMS -->
    <bpmn2:task id="_avviaFiglio" name="Avvia Figlio (JMS)" tns:taskName="JMS Send Message">
      <bpmn2:extensionElements>
        <drools:metaData name="elementname">
          <drools:metaValue><![CDATA[Avvia Figlio (JMS)]]></drools:metaValue>
        </drools:metaData>
      </bpmn2:extensionElements>
      <bpmn2:incoming>_flow2</bpmn2:incoming>
      <bpmn2:outgoing>_flow3</bpmn2:outgoing>
      <bpmn2:ioSpecification>
        <bpmn2:dataInput id="_avviaFiglio_messageNameInput" drools:dtype="String" itemSubjectRef="__avviaFiglio_messageNameInputItem" name="messageName"/>
        <bpmn2:dataInput id="_avviaFiglio_variablesInput" drools:dtype="Object" itemSubjectRef="__avviaFiglio_variablesInputItem" name="variables"/>
        <bpmn2:inputSet>
          <bpmn2:dataInputRefs>_avviaFiglio_messageNameInput</bpmn2:dataInputRefs>
          <bpmn2:dataInputRefs>_avviaFiglio_variablesInput</bpmn2:dataInputRefs>
        </bpmn2:inputSet>
      </bpmn2:ioSpecification>
      <bpmn2:dataInputAssociation>
        <bpmn2:sourceRef>jmsPayload</bpmn2:sourceRef>
        <bpmn2:targetRef>_avviaFiglio_variablesInput</bpmn2:targetRef>
      </bpmn2:dataInputAssociation>
      <bpmn2:dataInputAssociation>
        <bpmn2:targetRef>_avviaFiglio_messageNameInput</bpmn2:targetRef>
        <bpmn2:assignment>
          <bpmn2:from xsi:type="bpmn2:tFormalExpression"><![CDATA[avviaFiglio]]></bpmn2:from>
          <bpmn2:to xsi:type="bpmn2:tFormalExpression">_avviaFiglio_messageNameInput</bpmn2:to>
        </bpmn2:assignment>
      </bpmn2:dataInputAssociation>
    </bpmn2:task>
    
    <bpmn2:scriptTask id="_operazionePadre" name="Operazione Padre" scriptFormat="http://www.java.com/java">
      <bpmn2:incoming>_flow3</bpmn2:incoming>
      <bpmn2:outgoing>_flow4</bpmn2:outgoing>
      <bpmn2:script><![CDATA[
System.out.println("[ProcessoPadre] ======================================");
System.out.println("[ProcessoPadre] Esecuzione operazione del padre");
System.out.println("[ProcessoPadre] Il processo figlio lavora in parallelo via JMS");
System.out.println("[ProcessoPadre] Simulazione elaborazione...");
Thread.sleep(2000);
System.out.println("[ProcessoPadre] Operazione padre completata");
System.out.println("[ProcessoPadre] In attesa del completamento del figlio...");
System.out.println("[ProcessoPadre] ======================================");
]]></bpmn2:script>
    </bpmn2:scriptTask>
    
    <!-- Signal Event: Attendi risposta da MDB -->
    <bpmn2:intermediateCatchEvent id="_attendiFiglio" name="Attendi Completamento">
      <bpmn2:incoming>_flow4</bpmn2:incoming>
      <bpmn2:outgoing>_flow5</bpmn2:outgoing>
      <bpmn2:dataOutput id="_attendiFiglio_risultatoOutput" drools:dtype="String" itemSubjectRef="_risultatoItem" name="event"/>
      <bpmn2:dataOutputAssociation>
        <bpmn2:sourceRef>_attendiFiglio_risultatoOutput</bpmn2:sourceRef>
        <bpmn2:targetRef>risultato</bpmn2:targetRef>
      </bpmn2:dataOutputAssociation>
      <bpmn2:outputSet>
        <bpmn2:dataOutputRefs>_attendiFiglio_risultatoOutput</bpmn2:dataOutputRefs>
      </bpmn2:outputSet>
      <bpmn2:signalEventDefinition signalRef="figlioCompletato"/>
    </bpmn2:intermediateCatchEvent>
    
    <bpmn2:scriptTask id="_finalizza" name="Finalizza" scriptFormat="http://www.java.com/java">
      <bpmn2:incoming>_flow5</bpmn2:incoming>
      <bpmn2:outgoing>_flow6</bpmn2:outgoing>
      <bpmn2:script><![CDATA[
System.out.println("[ProcessoPadre] ======================================");
System.out.println("[ProcessoPadre] PROCESSO FIGLIO COMPLETATO!");
System.out.println("[ProcessoPadre] Risultato ricevuto: " + risultato);
System.out.println("[ProcessoPadre] ordineId: " + ordineId);
System.out.println("[ProcessoPadre] Finalizzazione processo padre...");
System.out.println("[ProcessoPadre] PROCESSO PADRE TERMINATO CON SUCCESSO");
System.out.println("[ProcessoPadre] ======================================");
]]></bpmn2:script>
    </bpmn2:scriptTask>
    
    <bpmn2:endEvent id="_endEvent" name="End">
      <bpmn2:incoming>_flow6</bpmn2:incoming>
    </bpmn2:endEvent>
    
    <bpmn2:sequenceFlow id="_flow1" sourceRef="_startEvent" targetRef="_preparaDati"/>
    <bpmn2:sequenceFlow id="_flow2" sourceRef="_preparaDati" targetRef="_avviaFiglio"/>
    <bpmn2:sequenceFlow id="_flow3" sourceRef="_avviaFiglio" targetRef="_operazionePadre"/>
    <bpmn2:sequenceFlow id="_flow4" sourceRef="_operazionePadre" targetRef="_attendiFiglio"/>
    <bpmn2:sequenceFlow id="_flow5" sourceRef="_attendiFiglio" targetRef="_finalizza"/>
    <bpmn2:sequenceFlow id="_flow6" sourceRef="_finalizza" targetRef="_endEvent"/>
    
  </bpmn2:process>
  
  <bpmn2:itemDefinition id="__avviaFiglio_messageNameInputItem" structureRef="String"/>
  <bpmn2:itemDefinition id="__avviaFiglio_variablesInputItem" structureRef="Object"/>
  
  <bpmndi:BPMNDiagram>
    <bpmndi:BPMNPlane bpmnElement="com.martinispec.processopadre">
      <bpmndi:BPMNShape id="_startEvent_di" bpmnElement="_startEvent">
        <dc:Bounds x="50" y="100" width="36" height="36"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="_preparaDati_di" bpmnElement="_preparaDati">
        <dc:Bounds x="136" y="78" width="100" height="80"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="_avviaFiglio_di" bpmnElement="_avviaFiglio">
        <dc:Bounds x="286" y="78" width="100" height="80"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="_operazionePadre_di" bpmnElement="_operazionePadre">
        <dc:Bounds x="436" y="78" width="100" height="80"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="_attendiFiglio_di" bpmnElement="_attendiFiglio">
        <dc:Bounds x="586" y="100" width="36" height="36"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="_finalizza_di" bpmnElement="_finalizza">
        <dc:Bounds x="672" y="78" width="100" height="80"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="_endEvent_di" bpmnElement="_endEvent">
        <dc:Bounds x="822" y="100" width="36" height="36"/>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNEdge id="_flow1_di" bpmnElement="_flow1">
        <di:waypoint x="68" y="118"/>
        <di:waypoint x="186" y="118"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="_flow2_di" bpmnElement="_flow2">
        <di:waypoint x="236" y="118"/>
        <di:waypoint x="336" y="118"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="_flow3_di" bpmnElement="_flow3">
        <di:waypoint x="386" y="118"/>
        <di:waypoint x="486" y="118"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="_flow4_di" bpmnElement="_flow4">
        <di:waypoint x="536" y="118"/>
        <di:waypoint x="604" y="118"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="_flow5_di" bpmnElement="_flow5">
        <di:waypoint x="622" y="118"/>
        <di:waypoint x="722" y="118"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="_flow6_di" bpmnElement="_flow6">
        <di:waypoint x="772" y="118"/>
        <di:waypoint x="840" y="118"/>
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
  
</bpmn2:definitions>
